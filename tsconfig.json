{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "dist",
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "paths": {
            "#*": ["./src/*", "./dist/*"]
        }
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "dist"]
}
