{
    "name": "wb-tariffs",
    "version": "1.0.0",
    "description": "Service application that grabs data from WB API and updates Google Spreadsheets with it",
    "main": "app.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec tsx src/app.ts",
        "watch:build": "tsc --build --force --verbose --watch",
        "knex:dev": "tsx src/utils/knex.ts",
        "build": "tsc --allowJs",
        "start": "node dist/app.js",
        "knex": "node dist/utils/knex.js",
        "tsc:check": "tsc --allowJs --noEmit",
        "prettier": "prettier --config .prettierrc.json src/**/*.js --check",
        "prettier-format": "prettier --config .prettierrc.json src/**/*.js --write",
        "eslint": "eslint",
        "eslint-fix": "eslint --fix"
    },
    "imports": {
        "#*": [
            "./dist/*",
            "./src/*"
        ]
    },
    "_moduleAliases": {
        "#": "src"
    },
    "author": "Vertifelis",
    "license": "MIT",
    "dependencies": {
        "@googleapis/sheets": "^12.0.0",
        "commander": "^14.0.2",
        "dotenv": "^17.2.3",
        "google-auth-library": "^10.5.0",
        "knex": "^3.1.0",
        "log4js": "^6.9.1",
        "pg": "^8.16.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@types/bcrypt": "^6.0.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/dateformat": "^5.0.3",
        "@types/express": "^5.0.5",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/pg": "^8.15.6",
        "babel-jest": "^30.2.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jsdoc": "^61.4.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unused-imports": "^4.3.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "prettier": "^3.6.2",
        "prettier-plugin-jsdoc": "^1.5.0",
        "typescript": "^5.9.3"
    }
}
