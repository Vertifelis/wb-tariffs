{
    "name": "wb-tariffs",
    "version": "1.0.0",
    "description": "Service application that grabs data from WB API and updates Google Spreadsheets with it",
    "main": "app.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec tsx src/app.ts",
        "watch:build": "tsc --build --force --verbose --watch",
        "knex:dev": "tsx src/utils/knex.ts",
        "build": "tsc --project tsconfig.build.json --allowJs",
        "start": "node dist/app.js",
        "knex": "node dist/utils/knex.js",
        "tsc:check": "tsc --allowJs --noEmit",
        "prettier": "prettier --config .prettierrc.json src/**/*.js --check",
        "prettier-format": "prettier --config .prettierrc.json src/**/*.js --write",
        "eslint": "eslint",
        "eslint-fix": "eslint --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage"
    },
    "imports": {
        "#*": [
            "./dist/*",
            "./src/*"
        ]
    },
    "_moduleAliases": {
        "#": "src"
    },
    "author": "Vertifelis",
    "license": "MIT",
    "dependencies": {
        "@googleapis/sheets": "^12.0.0",
        "commander": "^14.0.2",
        "dotenv": "^17.2.3",
        "google-auth-library": "^10.5.0",
        "knex": "^3.1.0",
        "pg": "^8.16.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.5.0",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.5",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0"
    }
}
